{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testMatch": ["**/test/**/*.e2e-spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^common/(.*)$": "<rootDir>/common/$1"
  },
  "preset": "ts-jest"
}
